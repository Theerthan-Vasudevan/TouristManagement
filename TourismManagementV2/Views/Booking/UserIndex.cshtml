@model IEnumerable<TourismManagementV2.Models.Booking>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">My Bookings</h2>
        <a asp-controller="Package" asp-action="UserIndex" class="btn btn-primary">
            Back to Packages
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Package</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>People</th>
                        <th>Total Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Package?.PackageName</td>
                            <td>@item.BookingDate.ToShortDateString()</td>
                            <td>
                                @if (item.Status == "PAID")
                                {
                                    <span class="badge bg-success">PAID</span>
                                }
                                else if (item.Status == "CANCELLED")
                                {
                                    <span class="badge bg-danger">CANCELLED</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Status</span>
                                }
                            </td>
                            <td>@item.NumberOfPeople</td>
                            <td>₹@item.TotalAmount</td>
                            <td>
                                @if (item.Status != "CANCELLED")
                                {
                                    <form asp-controller="Booking" asp-action="Cancel" method="post"
                                          onsubmit="return confirm('Are you sure you want to cancel? 85% refund will be initiated.');"
                                          style="display:inline;">
                                        <input type="hidden" name="id" value="@item.BookingId" />
                                        <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
