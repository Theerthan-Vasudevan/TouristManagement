@model TourismManagementV2.Models.Package

@{
    ViewData["Title"] = "Delete Package";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Delete Package</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title">Are you sure you want to delete this package?</h5>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PackageId)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PackageId)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PackageName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PackageName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
                <dd class="col-sm-9">₹@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DurationDays)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DurationDays) days</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-controller="Package" asp-action="AdminIndex" class="btn btn-primary">Back to Packages</a>
            </form>

        </div>
    </div>
</div>
