<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExploreIt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Navbar customization */
        .navbar {
            background-color: #007bff !important; /* Primary blue */
        }

            /* Default navbar links */
            .navbar .nav-link {
                font-weight: bold;
                color: white !important;
                transition: color 0.3s ease;
            }

                /* Hover effect (orange) */
                .navbar .nav-link:hover {
                    color: #f39c12 !important;
                }

                /* Active link styling */
                .navbar .nav-link.active {
                    color: #ffdd57 !important; /* gold-ish */
                }

                /* Logout special */
                .navbar .nav-link.text-danger {
                    color: white !important; /* default white */
                }

                    .navbar .nav-link.text-danger:hover {
                        color: red !important; /* only logout turns red */
                    }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Package" asp-action="UserIndex">ExploreIt</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                @if (Context.Session.GetInt32("UserId") != null)
                {
                    var role = Context.Session.GetString("Role");

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Package" asp-action="UserIndex">Packages</a>
                        </li>

                        @if (role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Package" asp-action="Create">Add Package</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Package" asp-action="AdminIndex">Manage Packages</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="AdminIndex">Manage Users</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Booking" asp-action="UserIndex">My Bookings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Profile">Profile</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-danger fw-bold" asp-controller="User" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Register">Register</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>



    <!-- Main content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
