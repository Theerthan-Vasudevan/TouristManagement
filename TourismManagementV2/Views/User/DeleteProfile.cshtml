@model TourismManagementV2.Models.User

@{
    ViewData["Title"] = "Delete Profile";
}

<h2>Delete Profile</h2>

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <p>Are you sure you want to delete your account, <strong>@Model.Username</strong>? This action cannot be undone.</p>

            <form asp-action="DeleteProfile" method="post">
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-action="Profile" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
